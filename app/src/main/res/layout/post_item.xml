<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:text="color"
        android:id="@+id/ColortextView"
        android:background="#ff42c7ff" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/userProfileImage"
        android:layout_below="@+id/ColortextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wael Alhamwi"
        android:id="@+id/PostInfotextView"
        android:layout_alignTop="@+id/userProfileImage"
        android:layout_toRightOf="@+id/userProfileImage"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="6/1/2015"
        android:id="@+id/PostTimetextView"
        android:layout_below="@+id/PostInfotextView"
        android:layout_toRightOf="@+id/userProfileImage"
        android:layout_toEndOf="@+id/userProfileImage"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/PostDesctextView"
        android:layout_below="@+id/PostTimetextView"
        android:layout_toRightOf="@+id/userProfileImage"
        android:layout_toEndOf="@+id/userProfileImage"
        android:textColor="#ff000000"
        android:layout_above="@+id/PostImage" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/PostImage"
        android:layout_below="@+id/userProfileImage"
        android:scaleType="fitCenter"/>

</RelativeLayout>