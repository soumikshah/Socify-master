<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_socify</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_solid_socify</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">25dp</item>
    </style>

    <style name="Login_Buttons">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="copyright">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">150dp</item>
    </style>

</resources>
